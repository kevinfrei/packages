{
  "name": "@freik/build-tools",
  "version": "3.6.0",
  "description": "Tools for building stuff (cross platform!)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "type": "module",
  "bin": {
    "er": "./lib/tools.js",
    "ftool": "./lib/tools.js"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/build-tools.git"
  },
  "scripts": {
    "min": "node ./lib/tools.js minify -i lib/*.js",
    "test": "jest --passWithNoTests --config jestconfig.json",
    "build": "rimraf lib && tsc",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint && yarn pinst --disable",
    "format": "ftool format",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "postinstall": "husky install",
    "postpublish": "yarn pinst --enable"
  },
  "dependencies": {
    "@babel/cli": "~7.21.5",
    "@babel/core": "~7.22.1",
    "@babel/preset-env": "~7.22.4",
    "@babel/preset-flow": "~7.21.4",
    "@babel/preset-react": "~7.22.3",
    "@rollup/plugin-babel": "~6.0.3",
    "@rollup/plugin-node-resolve": "~15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@typescript-eslint/parser": "~5.59.8",
    "concurrently": "~8.1.0",
    "cross-env": "~7.0.3",
    "eslint": "~8.42.0",
    "eslint-config-prettier": "~8.8.0",
    "eslint-plugin-import": "~2.27.5",
    "eslint-plugin-prettier": "~4.2.1",
    "glob": "~10.2.6",
    "jest": "~29.5.0",
    "jest-extended": "~3.2.4",
    "jest-transform-css": "~6.0.1",
    "minimist": "~1.2.8",
    "postcss": "~8.4.24",
    "prettier": "~2.8.8",
    "rimraf": "~5.0.1",
    "rollup": "~3.23.0",
    "rollup-plugin-dts": "~5.3.0",
    "shelljs": "~0.8.5",
    "source-map-explorer": "~2.5.3",
    "terser": "~5.17.7",
    "ts-jest": "~29.1.0",
    "typescript": "5.0.4",
    "wait-on": "~7.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.2.5",
    "@types/shelljs": "^0.8.12",
    "@types/uglify-es": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8"
  },
  "peerDependencies": {
    "prettier": "~2",
    "react": "~17",
    "react-scripts": "~5",
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-scripts": {
      "optional": true
    }
  },
  "engines": {
    "node": "~14.13.1 || >= 16.0.0"
  }
}
