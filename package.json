{
  "name": "packages",
  "version": "0.2.0",
  "description": "My mono-repo for a bunch of small NPM/bun packages",
  "main": "index.js",
  "repository": "https://github.com/kevinfrei/packages.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "workspaces": [
    "modules/build-tools",
    "modules/agnostic/*",
    "modules/node/*",
    "modules/www/*"
  ],
  "scripts": {
    "release": "bun runall release",
    "build": "bun runall build",
    "test": "bun runall test",
    "typechk": "bun runall typechk",
    "lint": "bun runall lint",
    "runall": "bun forall bun run",
    "forall": "bun workspace.ts",
    "format": "bun ftool format bun",
    "precommit": "bun format",
    "prepush": "bun run build && bun run test",
    "pub2npm": "TODO: bun publish --no-private",
    "prepare": "husky"
  },
  "devDependencies": {
    "@freik/build-tools": "workspace:*",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.4",
    "typedoc-plugin-markdown": "^4.2.1",
    "typescript": "^5.5.3"
  }
}
