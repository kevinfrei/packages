{
  "name": "packages",
  "version": "0.1.2",
  "description": "My mono-repo for a bunch of small NPM packages",
  "main": "index.js",
  "repository": "https://github.com/kevinfrei/packages.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "workspaces": [
    "modules/build-tools",
    "modules/agnostic/*",
    "modules/node/*",
    "modules/www/*"
  ],
  "scripts"  : {
    "release": "bun run --filter modules release",
    "build": "bun run --filter modules build",
    "format": "bun run ftool format bun",
    "test": "bun run --filter modules test",
    "prepare": "bun .husky/install.mjs",
    "lint": "bun run --filter modules lint",
    "pre-commit": "bun run ftool format",
    "pre-push": "bun run --filter modules test",
    "pub2npm": "TODO: bun publish --no-private"
  },
  "devDependencies": {
    "@freik/build-tools": "workspace:*",
    "@jest/types": "^29.6.3",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typedoc": "^0.26.4",
    "typedoc-plugin-markdown": "^4.2.1",
    "typescript": "^5.5.3"
  }
}
