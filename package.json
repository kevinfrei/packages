{
  "name": "packages",
  "version": "0.1.0",
  "description": "My mono-repo for a bunch of small NPM packages",
  "main": "index.js",
  "repository": "https://github.com/kevinfrei/packages.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "packageManager": "yarn@3.6.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "release": "npx lerna run release",
    "build": "npx lerna run build",
    "format": "yarn ftool format",
    "test": "npx lerna run test",
    "prepublishOnly": "yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "postinstall": "yarn husky install",
    "lerna": "npx lerna run"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.6.0",
    "@jest/types": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lerna": "^7.1.1",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "5.0.4"
  }
}
