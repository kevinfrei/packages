{
  "name": "@freik/node-utils",
  "version": "1.6.4",
  "description": "My personal set of utilities for NodeJS",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "repository": "github:kevinfrei/packages",
  "homepage": "https://github.com/kevinfrei/packages#readme",
  "bugs": {
    "url": "https://github.com/kevinfrei/packages/issues"
  },
  "keywords": [
    "node-utils"
  ],
  "files": [
    "lib/**/*"
  ],
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "scripts": {
    "justtest": "jest --config jestconfig.json",
    "watch": "jest --watch --config jestconfig.json",
    "clean": "rimraf lib .cjs.tsbuildinfo .esm.tsbuildinfo",
    "cjscompat": "echo '{\"type\":\"commonjs\"}'> ./lib/cjs/package.json",
    "esmcompat": "echo '{\"type\":\"module\"}'> ./lib/esm/package.json",
    "compat": "bun run cjscompat && bun run esmcompat",
    "release": "bun run clean && tsc --project tsconfig.cjs.opt.json && tsc --project tsconfig.esm.opt.json && bun run ftool minify -i -r lib && bun run compat",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json && bun run compat",
    "cleanbuild": "bun run clean && bun run build",
    "prepublishOnly": "bun run test",
    "prepare": "bun run release",
    "lint": "eslint --fix src",
    "preversion": "bun run lint",
    "typechk": "tsc --noEmit --project tsconfig.cjs.json && tsc --noEmit --project tsconfig.esm.json",
    "test": "bun run lint && bun run typechk && bun run justtest",
    "doc": "typedoc ./src/index.ts --readme none --tsconfig tsconfig.esm.json"
  },
  "dependencies": {
    "@freik/containers": "workspace:*",
    "@freik/helpers": "workspace:*",
    "@freik/is-hidden-file": "^1.13.1",
    "@freik/logger": "workspace:*",
    "@freik/seqnum": "workspace:*",
    "@freik/sync": "workspace:*",
    "@freik/text": "workspace:*",
    "@freik/typechk": "workspace:*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@freik/build-tools": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.8",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  }
}
