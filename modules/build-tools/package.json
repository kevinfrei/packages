{
  "name": "@freik/build-tools",
  "version": "3.6.11",
  "description": "Tools for building stuff (cross platform!)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "repository": "github:kevinfrei/packages",
  "homepage": "https://github.com/kevinfrei/packages#readme",
  "bugs": {
    "url": "https://github.com/kevinfrei/packages/issues"
  },
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "er": "./lib/tools.js",
    "ftool": "./lib/tools.js"
  },
  "scripts": {
    "justtest": "echo No Tests for Build Tools- Bad Kevin",
    "min": "bun ./lib/tools.js minify -i lib/*.js",
    "trymm": "bun ./src/tools.ts make-module src/line-count.ts",
    "build": "rm -rf lib && tsc",
    "prepare": "bun run build",
    "prepublishOnly": "bun run test && bun run lint",
    "lint": "bun run eslint --fix src",
    "preversion": "bun run lint",
    "typechk": "tsc --noEmit",
    "test": "bun run lint && bun run typechk"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "minimist": "^1.2.8",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "prettier": "^2 || ~3",
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "esbuild": "^0.23.0"
  },
  "engines": {
    "node": "^14.13.1 || >= 16.0.0",
    "bun": "^1.1.20"
  }
}
