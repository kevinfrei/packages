{
  "name": "@freik/react-tools",
  "version": "0.1.19",
  "description": "Kevin Frei's React utilities",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/packages.git"
  },
  "homepage": "https://github.com/kevinfrei/packages#readme",
  "bugs": {
    "url": "https://github.com/kevinfrei/packages/issues"
  },
  "keywords": [
    "js-utils",
    "react"
  ],
  "files": [
    "lib/**/*"
  ],
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js"
    }
  },
  "scripts": {
    "justtest": "bun test",
    "watch": "bun test --watch",
    "clean": "rm -rf lib",
    "release": "bun run build",
    "buildesm": "bun build --entrypoints src/index.ts --minify --outdir ./lib --target browser --format esm",
    "build": "bun run clean && bun run buildesm",
    "dbgbuild": "bun run clean && tools make-module --map --tsconfig tsconfig.json --esm src/*.ts src/*.tsx",
    "cleanbuild": "bun run clean && bun run build",
    "prepublishOnly": "bun run test",
    "prepare": "bun run release",
    "lint": "eslint --fix src",
    "preversion": "bun run lint",
    "typechk": "tsc --noEmit --project tsconfig.esm.json",
    "test": "bun run lint && bun run typechk && bun run justtest",
    "doc": "typedoc ./src/index.ts --readme none --tsconfig tsconfig.esm.json"
  },
  "dependencies": {
    "@freik/logger": "workspace:*",
    "@freik/typechk": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^17.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "typescript": "^5.8.2"
  }
}
