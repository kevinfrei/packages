{
  "name": "@freik/web-utils",
  "version": "0.5.2",
  "description": "Kevin Frei's Web utilities",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "repository": "github:kevinfrei/packages",
  "bugs": {
    "url": "https://github.com/kevinfrei/web-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/web-utils#readme",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "justtest": "jest --config jestconfig.json",
    "watch": "jest --watch --config jestconfig.json",
    "clean": "rimraf lib .cjs.tsbuildinfo .esm.tsbuildinfo",
    "cjscompat": "echo '{\"type\":\"commonjs\"}'> ./lib/cjs/package.json",
    "esmcompat": "echo '{\"type\":\"module\"}'> ./lib/esm/package.json",
    "compat": "yarn cjscompat && yarn esmcompat",
    "release": "yarn clean && tsc --project tsconfig.cjs.opt.json && tsc --project tsconfig.esm.opt.json && yarn ftool minify -i -r lib && yarn compat",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json && yarn compat",
    "cleanbuild": "yarn clean && yarn build",
    "prepublishOnly": "yarn test",
    "prepare": "yarn release",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "typechk": "tsc --noEmit --project tsconfig.cjs.json && tsc --noEmit --project tsconfig.esm.json",
    "test": "yarn lint && yarn typechk && yarn justtest",
    "doc": "typedoc ./src/index.ts --readme none --tsconfig tsconfig.esm.json"
  },
  "peerDependencies": {
    "@fluentui/react": ">=8.50.0",
    "@fluentui/react-components": ">=9.21.0",
    "@fluentui/react-hooks": ">=8.1.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "recoil": ">=0.4.1"
  },
  "peerDependenciesMeta": {
    "@fluentui/react": {
      "optional": true
    },
    "@fluentui/react-components": {
      "optional": true
    },
    "@fluentui/react-hooks": {
      "optional": true
    },
    "recoil": {
      "optional": true
    }
  },
  "devDependencies": {
    "@fluentui/react": "^8.110.2",
    "@fluentui/react-components": "^9.21.0",
    "@fluentui/react-hooks": "^8.6.27",
    "@freik/build-tools": "^3.6.0",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.2",
    "@types/react": "^17.0.60",
    "@types/react-dom": "^17.0.20",
    "@types/react-test-renderer": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "recoil": "^0.7.7",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@freik/typechk": "^0.1.0",
    "debug": "^4.3.4"
  }
}
